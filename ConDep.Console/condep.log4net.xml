<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow, HighIntensity" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="White" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Green" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date{ABSOLUTE}] %message%newline" />
      </layout>
    </appender>

    <appender name="TeamCityAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message%newline" />
      </layout>
    </appender>

    <logger name="condep.out">
      <level value="ALL" />
      <appender-ref ref="ConsoleAppender" />
    </logger>

    <logger name="condep.teamcity">
      <level value="ALL" />
      <appender-ref ref="TeamCityAppender" />
    </logger>

    <root>
      <level value="ALL" />
    </root>
  </log4net>
</configuration>